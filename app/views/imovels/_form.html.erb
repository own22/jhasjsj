  </div>
  <div class="field">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao %>
  </div>
  <div class="field">
    <%= f.label :descricao_curta %><br>
    <%= f.text_area :descricao_curta %>
  </div>

  <div class="field">
    <%= f.label :fotos %>
    <%= file_field_tag "images[]", type: :file, multiple: true %>  
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
